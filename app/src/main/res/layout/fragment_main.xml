<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="viewModel"
            type="com.u1tramarinet.youtubemusicsharehelper.screen.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".screen.main.MainFragment">

        <LinearLayout
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:elevation="@dimen/cardview_default_elevation"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/suffix_input"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/preview_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/preview_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.previewText()}"
                android:textSize="20sp"
                tools:text="tweet" />

            <TextView
                android:id="@+id/preview_image_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/image"
                android:textSize="12sp" />

            <FrameLayout
                android:id="@+id/preview_image_background"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/preview_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:scaleType="center" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/suffix_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="@{viewModel.suffixText()}"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/artist_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/suffix_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/suffix"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@id/suffix_input"
            app:layout_constraintTop_toBottomOf="@id/suffix_input" />

        <TextView
            android:id="@+id/artist_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@{viewModel.musicArtistText()}"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/raw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/artist_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/artist"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@id/artist_input"
            app:layout_constraintTop_toBottomOf="@id/artist_input" />

        <TextView
            android:id="@+id/rawTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_raw"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/raw"
            app:layout_constraintEnd_toStartOf="@id/raw"
            app:layout_constraintTop_toTopOf="@id/raw" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={viewModel.isPreviewTextRaw()}"
            android:onCheckedChanged="@{(button, checked) -> viewModel.updateIsPreviewTextRaw(checked)}"
            app:layout_constraintBottom_toTopOf="@id/clear_text"
            app:layout_constraintEnd_toEndOf="@id/clear_text" />

        <Button
            android:id="@+id/clear_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@android:drawable/ic_menu_delete"
            android:enabled="@{viewModel.clearTextButtonEnabled()}"
            android:onClick="@{(v) -> viewModel.clearText()}"
            android:text="@string/text"
            app:layout_constraintBottom_toTopOf="@id/share"
            app:layout_constraintEnd_toStartOf="@id/clear_image"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/clear_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@android:drawable/ic_menu_delete"
            android:enabled="@{viewModel.clearImageButtonEnabled()}"
            android:onClick="@{(v) -> viewModel.clearImage()}"
            android:text="@string/image"
            app:layout_constraintBottom_toTopOf="@id/share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/clear_text"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="@{viewModel.shareButtonEnabled()}"
            android:onClick="@{(v) -> viewModel.shareContent()}"
            android:text="@string/share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>