<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.u1tramarinet.youtubemusicsharehelper.screen.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_inputFragment"
            app:destination="@id/inputFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputFragment"
        android:name="com.u1tramarinet.youtubemusicsharehelper.screen.input.InputFragment"
        android:label="InputFragment">
        <argument
            android:name="contentKey"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="contentTitle"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="initialValue"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>